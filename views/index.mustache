{{> header}}
<div class="container content">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">Hello</div>
                <div class="card-body height3">
                    <div class="chat-welcome">
                        I'm here to help. Ask me questions.
                    </div>
                    <ul class="chat-list">
                    </ul>
                </div>
                <div class="card-footer">
                    <form id="prompt-form" >
                        <div class="input-group" >
                            <input id="prompt" type="text" name="prompt" class="form-control" placeholder="Enter your question">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-outline-secondary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                                    <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"/>
                                </svg></button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


























<style>
    .response {
        white-space: pre-line;
    }
</style>

{{> footer}}